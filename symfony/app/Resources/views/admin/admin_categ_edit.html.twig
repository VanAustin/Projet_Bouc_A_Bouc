{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Edition d'une catégorie
{% endblock %}

{% block body %}

    <h2>Editer une catégorie</h2>

    <div class="col-8 m-auto">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.categoryName, null, {'label': 'Nom de la catégorie', 'label_attr': {'class': 'field field-label'}}) }}
                {{ form_errors(form.categoryName) }}
                {{ form_widget(form.categoryName, {'attr': {'class': 'field field-input', 'placeholder': 'Nom de la catégorie'}}) }}
            </div>
            <button type="submit" id="_submit">Editer</button>
        {{ form_end(form) }}
    </div>

    <div class="d-flex justify-content-center">
        {{ form_start(deleteForm) }}
            <button type="submit" class="btn btn-danger mb-5" onclick="return confirm('Supprimer ?')"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
        {{ form_end(deleteForm) }}
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn btn-secondary mb-5" href="{{ path('admin_categories') }}">Retour admin Catégories</a>
    </div>

{% endblock %}
