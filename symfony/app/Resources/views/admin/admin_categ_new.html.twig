{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Création d'une catégorie
{% endblock %}

{% block body %}

    <h2>Créer une catégorie</h2>

    <div class="col-8 m-auto">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.categoryName, null, {'label': 'Nom de la catégorie', 'label_attr': {'class': 'field field-label js-hide-label'}}) }}
                {{ form_errors(form.categoryName) }}
                {{ form_widget(form.categoryName, {'attr': {'class': 'field field-input', 'placeholder': 'Nom de la catégorie'}}) }}
            </div>
            <button type="submit" id="_submit">Créer</button>
        {{ form_end(form) }}
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn btn-secondary mb-5" href="{{ path('admin_categories') }}">Retour admin Catégories</a>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/forms/forms.js') }}"></script>
{% endblock %}
