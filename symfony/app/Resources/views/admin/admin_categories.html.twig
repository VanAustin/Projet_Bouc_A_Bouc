{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Admin des catégories
{% endblock %}

{% block body %}

    <h2>Gérer les catégories</h2>

    <div class="d-flex flex-wrap justify-content-around">
        <div class="card mb-5 px-3 pt-3">
            <div class="card-body">
                <a class="btn btn-secondary" href="{{ path('admin_categ_new') }}">Créer une catégorie<br><i class="fa fa-tags mt-2" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.categoryName }}</td>
                    <td><a class="btn btn-light" href="{{ path('admin_categ_edit', {'id': category.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a class="btn btn-secondary mb-5" href="{{ path('admin') }}">Retour admin</a>
    </div>

{% endblock %}
